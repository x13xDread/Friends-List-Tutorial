<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "", class: "form-control"%>
    <%= f.label :email %><br />
    
  </div>

  <div class="field form-floating mb-3">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "", class: "form-control"%>
    <%= f.label :password %><br />
    
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit "Log in", class: "form-control btn btn-outline-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
