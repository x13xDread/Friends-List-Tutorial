<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "", class: "form-control" %>
    <%= f.label :email %><br />    
  </div>

  <div class="field form-floating mb-3">    
   
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "", class: "form-control" %>
     <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.label :password %>
  </div>

  <div class="field form-floating mb-3">    
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "", class: "form-control" %>
    <%= f.label :password_confirmation %><br />
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "form-control btn btn-outline-success"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
