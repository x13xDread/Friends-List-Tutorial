

<div class = "p-3 mb-2 bg-light text-dark">
  <h1 class= "border-bottom">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>

  <p>
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>
  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %> 
  <%= link_to 'Back', friends_path, class: "btn btn-secondary" %>
</div>

